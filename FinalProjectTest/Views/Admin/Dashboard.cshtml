@{
    ViewData["Title"] = "Admin Dashboard";
    var top = ViewBag.TopFavorited as List<dynamic>;
}

<h2 class="mb-4">📊 Admin Dashboard</h2>

<!-- 🧾 Summary Cards -->
<div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4 mb-5">
    <div class="col">
        <div class="card text-bg-primary shadow h-100">
            <div class="card-body">
                <h5 class="card-title">👤 Users</h5>
                <p class="display-6">@ViewBag.UserCount</p>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-bg-success shadow h-100">
            <div class="card-body">
                <h5 class="card-title">📍 Locations</h5>
                <p class="display-6">@ViewBag.LocationCount</p>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-bg-warning shadow h-100">
            <div class="card-body">
                <h5 class="card-title">🏨 Hotels</h5>
                <p class="display-6">@ViewBag.HotelCount</p>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-bg-danger shadow h-100">
            <div class="card-body">
                <h5 class="card-title">❤️ Favorites</h5>
                <p class="display-6">@ViewBag.FavoriteCount</p>
            </div>
        </div>
    </div>
</div>

<!-- 🔝 Top Favorited Locations -->
<h3 class="mb-3">🔝 Top 5 Most Favorited Locations</h3>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Favorites</th>
        </tr>
    </thead>
    <tbody>
        @if (top != null && top.Any())
        {
            foreach (var item in top)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Count</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2">No favorites data found.</td>
            </tr>
        }
    </tbody>
</table>
